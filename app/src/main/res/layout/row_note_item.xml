<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/note"
        android:layout_width="231dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:lines="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/note_button_details"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="texto largo texto largo texto largo texto largo"
        />


    <ImageButton
        android:id="@+id/note_button_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/paper_alt"
        android:contentDescription="@string/edit_note"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/note"
        app:layout_constraintEnd_toStartOf="@+id/note_button_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="12.5"
        app:layout_constraintStart_toEndOf="@+id/note"
        app:layout_constraintTop_toTopOf="@+id/note"
        />

    <ImageButton
        android:id="@+id/note_button_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:contentDescription="@string/delete_note"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="@+id/note_button_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="12.5"
        app:layout_constraintStart_toEndOf="@+id/note_button_details"
        app:layout_constraintTop_toTopOf="@+id/note_button_details"
        />

</androidx.constraintlayout.widget.ConstraintLayout>